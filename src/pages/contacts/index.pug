extends ../../main

block variables
    - var title = 'Контакты'

block content
    .page
        .page__breadcrumbs
            .container
                include ../../components/breadcrumbs/index
        .container
            h1.page__title Контакты
            .page__grid
                aside.page__aside.aside
                    .aside__menu
                        -
                            var menu = [
                                {
                                    title: 'Оплаты',
                                },
                                {
                                    title: 'Доставка',
                                },
                                {
                                    title: 'Контакты',
                                    cls: 'active'
                                }
                            ];
                        include ../../components/menu/index

                    button(type='button').aside__callback-btn.btn.btn--grey
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
