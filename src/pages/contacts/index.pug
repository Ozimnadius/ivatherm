                        </svg>
                        span Задать вопрос

                main.page__content
                    include ../../components/contacts/index

        .page__extra
            .container
                -
                    var slider = {
                        type: 2,
                        title: 'Ранее вы смотрели',
                        list: [1, 2, 3]
                    }
                include ../../components/slider/index
        .page__feed
            include ../../components/feed/index








